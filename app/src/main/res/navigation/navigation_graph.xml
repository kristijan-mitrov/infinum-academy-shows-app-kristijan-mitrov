<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph" app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="shows.kristijanmitrov.infinumacademyshows.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/toShowsFragment"
            app:destination="@id/showsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/showsFragment"
        android:name="shows.kristijanmitrov.infinumacademyshows.ShowsFragment"
        android:label="ShowsFragment">
        <action
            android:id="@+id/toShowDetailsFragment"
            app:destination="@id/showDetailsFragment"/>
        <action
            android:id="@+id/toLoginFragment"
            app:destination="@id/loginFragment"/>
        <argument
            android:name="username"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/showDetailsFragment"
        android:name="shows.kristijanmitrov.infinumacademyshows.ShowDetailsFragment"
        android:label="fragment_show_details" tools:layout="@layout/fragment_show_details">
        <action
            android:id="@+id/toShowsFragment"
            app:destination="@id/showsFragment"/>
        <argument
            android:name="username"
            app:argType="string"/>
        <argument
            android:name="show"
            app:argType="shows.kristijanmitrov.model.Show"/>

    </fragment>
</navigation>